---
import { LOGO_IMAGE, SITE } from "@config";
import Hr from "./Hr.astro";
import LinkButton from "./LinkButton.astro";

export interface Props {
  activeNav?: "posts" | "tags" | "about" | "search";
}

const { activeNav } = Astro.props;
---

<header>
  <a id="skip-to-content" href="#main-content" data-i18n="skipToContent"
    >Skip to content</a
  >
  <div class="nav-container">
    <div class="top-nav-wrap">
      <a href="/" class="logo whitespace-nowrap">
        {
          // LOGO_IMAGE.enable ? (
          //   <img
          //     src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
          //     alt={SITE.title}
          //     width={LOGO_IMAGE.width}
          //     height={LOGO_IMAGE.height}
          //   />
          // ) : (
          //   SITE.title
          // )
        }
        Joe Sabbagh
      </a>
      <nav id="nav-menu">
        <button
          class="hamburger-menu focus-outline"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="menu-icon"
          >
            <line x1="7" y1="12" x2="21" y2="12" class="line"></line>
            <line x1="3" y1="6" x2="21" y2="6" class="line"></line>
            <line x1="12" y1="18" x2="21" y2="18" class="line"></line>
            <line x1="18" y1="6" x2="6" y2="18" class="close"></line>
            <line x1="6" y1="6" x2="18" y2="18" class="close"></line>
          </svg>
        </button>
        <ul id="menu-items" class="display-none sm:flex">
          <li>
            <a
              href="/posts/"
              class={activeNav === "posts" ? "active" : ""}
              data-i18n="posts"
            >
              Posts
            </a>
          </li>
          <li>
            <a
              href="/tags/"
              class={activeNav === "tags" ? "active" : ""}
              data-i18n="tags"
            >
              Tags
            </a>
          </li>

          <li>
            <LinkButton
              href="/search/"
              className={`focus-outline p-3 sm:p-1 ${
                activeNav === "search" ? "active" : ""
              } flex`}
              ariaLabel="search"
              title="Search"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="scale-125 sm:scale-100"
                ><path
                  d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
                ></path>
              </svg>
              <span class="sr-only" data-i18n="search">Search</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li>
                <button
                  id="theme-btn"
                  class="focus-outline"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" id="moon-svg">
                    <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
                  </svg>
                  <svg xmlns="http://www.w3.org/2000/svg" id="sun-svg">
                    <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
                  </svg>
                </button>
              </li>
            )
          }
          <li class="lang-dropdown-wrap">
            <button
              id="lang-btn"
              class="lang-btn focus-outline"
              aria-haspopup="listbox"
              aria-expanded="false"
              aria-label="Select language"
            >
              <span id="lang-current">EN</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="10"
                height="10"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lang-chevron"
                aria-hidden="true"
              >
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>
            <ul
              id="lang-menu"
              role="listbox"
              aria-label="Language"
              class="lang-menu display-none"
            >
              <li
                role="option"
                data-lang="en"
                class="lang-option"
                aria-selected="true"
              >EN</li>
              <li
                role="option"
                data-lang="fr"
                class="lang-option"
                aria-selected="false"
              >FR</li>
            </ul>
          </li>
        </ul>
      </nav>
    </div>
  </div>
  <Hr />
</header>

<style>
  #skip-to-content {
    @apply absolute -top-full left-16 z-50 bg-skin-accent px-3 py-2 text-skin-inverted transition-all focus:top-4;
  }
  .nav-container {
    @apply mx-auto flex max-w-3xl flex-col items-center justify-between sm:flex-row;
  }
  .top-nav-wrap {
    @apply relative flex w-full items-start justify-between p-4 sm:items-center sm:py-8;
  }
  .logo {
    @apply absolute py-1 text-xl font-semibold sm:static sm:text-2xl;
  }
  .hamburger-menu {
    @apply self-end p-2 sm:hidden;
  }
  .hamburger-menu svg {
    @apply h-6 w-6 scale-125 fill-skin-base;
  }

  nav {
    @apply flex w-full flex-col items-center sm:ml-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0;
  }
  nav > ul {
    @apply mt-4 grid w-48 grid-cols-3 gap-x-2 gap-y-2 sm:ml-0 sm:mt-0 sm:w-auto sm:gap-x-5 sm:gap-y-0;
  }
  nav > ul > li {
    @apply col-span-3 flex items-center justify-center;
  }
  nav > ul > li > a {
    @apply w-full px-4 py-3 text-center font-medium hover:text-skin-accent sm:my-0 sm:px-2 sm:py-1;
  }
  nav > ul > li:nth-last-child(3) a {
    @apply w-auto;
  }
  nav > ul > li:nth-last-child(1),
  nav > ul > li:nth-last-child(2),
  nav > ul > li:nth-last-child(3) {
    @apply col-span-1;
  }

  /* ===== Language Dropdown ===== */
  .lang-dropdown-wrap {
    @apply relative;
  }
  .lang-btn {
    @apply flex cursor-pointer items-center gap-1 rounded p-1 text-sm font-medium text-skin-base hover:text-skin-accent;
    background: transparent;
    border: none;
  }
  .lang-chevron {
    @apply transition-transform duration-200;
    stroke: currentColor;
  }
  .lang-btn[aria-expanded="true"] .lang-chevron {
    transform: rotate(180deg);
  }
  .lang-menu {
    @apply absolute right-0 z-50 mt-1 min-w-[3.5rem] overflow-hidden rounded-md border border-skin-line bg-skin-fill shadow-lg;
    top: calc(100% + 4px);
  }
  .lang-option {
    @apply cursor-pointer px-3 py-2 text-center text-sm font-medium text-skin-base transition-colors hover:bg-skin-card hover:text-skin-accent;
    list-style: none;
  }
  .lang-option[aria-selected="true"] {
    @apply text-skin-accent;
  }
  nav a.active {
    @apply underline decoration-wavy decoration-2 underline-offset-4;
  }
  nav a.active svg {
    @apply fill-skin-accent;
  }

  nav button {
    @apply p-1;
  }
  nav button svg {
    @apply h-6 w-6 fill-skin-base hover:fill-skin-accent;
  }
  #theme-btn {
    @apply p-3 sm:p-1;
  }
  #theme-btn svg {
    @apply scale-125 hover:rotate-12 sm:scale-100;
  }

  .menu-icon line {
    @apply transition-opacity duration-75 ease-in-out;
  }
  .menu-icon .close {
    opacity: 0;
  }
  .menu-icon.is-active .line {
    @apply opacity-0;
  }
  .menu-icon.is-active .close {
    @apply opacity-100;
  }

  /* Language select dropdown */
  .lang-select {
    @apply cursor-pointer bg-transparent p-1 text-sm font-medium text-skin-base hover:text-skin-accent;
    border: none;
    outline: none;
    appearance: none;
    -webkit-appearance: none;
  }
  .lang-select:focus {
    @apply rounded outline-2 outline-offset-1 outline-skin-fill;
  }
  /* Make options readable in both light and dark themes */
  .lang-select option {
    background: var(--color-fill);
    color: var(--color-base);
  }
</style>

<script>
  function toggleNav() {
    // Toggle menu
    const menuBtn = document.querySelector(".hamburger-menu");
    const menuIcon = document.querySelector(".menu-icon");
    const menuItems = document.querySelector("#menu-items");

    menuBtn?.addEventListener("click", () => {
      const menuExpanded = menuBtn.getAttribute("aria-expanded") === "true";
      menuIcon?.classList.toggle("is-active");
      menuBtn.setAttribute("aria-expanded", menuExpanded ? "false" : "true");
      menuBtn.setAttribute(
        "aria-label",
        menuExpanded ? "Open Menu" : "Close Menu"
      );
      menuItems?.classList.toggle("display-none");
    });
  }

  function initLangDropdown() {
    const btn = document.getElementById("lang-btn");
    const menu = document.getElementById("lang-menu");
    const current = document.getElementById("lang-current");
    const options = document.querySelectorAll<HTMLElement>(".lang-option");
    if (!btn || !menu || !current) return;

    const activeLang = (localStorage.getItem("lang") || "en").toUpperCase();
    current.textContent = activeLang;
    options.forEach(opt => {
      opt.setAttribute(
        "aria-selected",
        opt.dataset.lang === activeLang.toLowerCase() ? "true" : "false"
      );
    });

    function openMenu() {
      menu!.classList.remove("display-none");
      btn!.setAttribute("aria-expanded", "true");
    }
    function closeMenu() {
      menu!.classList.add("display-none");
      btn!.setAttribute("aria-expanded", "false");
    }
    function toggleMenu() {
      const isOpen = btn!.getAttribute("aria-expanded") === "true";
      isOpen ? closeMenu() : openMenu();
    }

    btn.addEventListener("click", e => {
      e.stopPropagation();
      toggleMenu();
    });

    options.forEach(opt => {
      opt.addEventListener("click", () => {
        const lang = opt.dataset.lang || "en";
        current.textContent = lang.toUpperCase();
        options.forEach(o =>
          o.setAttribute("aria-selected", o === opt ? "true" : "false")
        );
        closeMenu();
        if (typeof window.__setLang === "function") {
          window.__setLang(lang);
        }
      });
    });

    // Close on outside click
    document.addEventListener("click", () => closeMenu());
    menu.addEventListener("click", e => e.stopPropagation());

    // Keyboard: Escape closes
    document.addEventListener("keydown", e => {
      if (e.key === "Escape") closeMenu();
    });
  }

  toggleNav();
  initLangDropdown();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
  document.addEventListener("astro:after-swap", initLangDropdown);
</script>
